{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run with IO",
            "type": "shell",
            "command": "g++ -std=c++17 -o \"${fileBasenameNoExtension}\" \"${file}\" && ${fileBasenameNoExtension}.exe < input.txt > output.txt",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
